{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 520,
  "title": "Major Australian Cities (primary airports)",
  "projection": { "type": "mercator", "center": [134, -26], "scale": 1000 },
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
        "format": { "type": "topojson", "feature": "countries" }
      },
      "transform": [{ "filter": "datum.properties.name == 'Australia'" }],
      "mark": { "type": "geoshape", "fill": "#eee", "stroke": "white" }
    },

    {
      "params": [
        {
          "name": "routeHover",
          "select": { "type": "point", "fields": ["origin","destination"], "on": "mouseover", "clear": "mouseout" }
        }
      ],
      "data": { "url": "data/routes_subset.csv", "format": { "type": "csv" } },
      "mark": { "type": "rule", "strokeCap": "round" },
      "encoding": {
        "longitude": { "field": "lon_o", "type": "quantitative" },
        "latitude": { "field": "lat_o", "type": "quantitative" },
        "longitude2": { "field": "lon_d" },
        "latitude2": { "field": "lat_d" },
